<div class="container new-city">
  {{#if addNewCity}}
    <h1>New City</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            {{input value=name id="name"}}
          </div>

          <div class="form-group">
            <label for="country">Country</label>
            {{input value=country id="country"}}
          </div>

          <button {{action 'save1'}}>Save</button>
        </form>
        <button {{action 'cityFormHide'}} class="hide-form btn btn-warning">Hide</button>
      </div>
  {{else}}
      <button class="btn-lg btn-primary" {{action 'cityFormShow'}}>Add New City</button>
  {{/if}}
</div>
