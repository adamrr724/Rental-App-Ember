
{{#if isBigImageShowing}}
  <div class="places col-md-4">
      <img class="images-rentals" src="{{rental.image}}" alt="" {{action 'bigImageHide'}}/>
  </div>
{{else}}
  <div class="places-showing col-md-4">
    <li class="link">{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}} {{/link-to}} <br>
      {{#if isImageShowing}}
        <button {{action 'imageHide'}} class="btn btn-warning">Hide Image</button>
      {{else}}
        <button {{action 'imageShow'}} class="btn btn-success">Show Image</button>
      {{/if}}
    </li>
</div>
{{/if}}
